<div class="pageloader">
    <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
</div>

<div class="page_change_buttons_shell page_change_button_left">
    <button class="button is-info is-rounded page_change_button" id="prevButton">
        <span class="icon">
            <i class="fas fa-arrow-left"></i>
        </span>
    </button>
</div>

<div class="page_change_buttons_shell page_change_button_right">
    <button class="button is-info is-rounded page_change_button" id="nextButton">
        <span class="icon">
            <i class="fas fa-arrow-right"></i>
        </span>
    </button>
</div>

<div id="char-builder" class="container py-4 text-center">

    <div id="errorDisplay" class="hero is-danger is-hidden">
        <div class="hero-body is-paddingless py-3">
            <div id="errorMessage" class="container"></div>
        </div>
    </div>

    <div class="box">

        <h1 class="title is-1 font-forum has-text-grey-light">Character Builder</h1>

        <div class="steps">
            <div class="step-item is-completed is-info">
                <div class="step-marker">
                <a href="page1?"><span class="has-text-bck-color icon"><i class="fa fa-user-alt"></i></span></a>
                </div>
                <div class="step-details is-hidden-touch">
                    <a href="page1?" class="button is-rounded is-inverted is-info"><p class="step-title">Basics</p></a>
                </div>
            </div>
            <div class="step-item is-completed is-info">
                <div class="step-marker"><a href="page2?"><span class="has-text-bck-color">A</span></a></div>
                <div class="step-details is-hidden-touch">
                    <a href="page2?" class="button is-rounded is-inverted is-info"><p class="step-title">Ancestry</p></a>
                </div>
            </div>
            <div class="step-item is-completed is-info">
                <div class="step-marker"><a href="page3?"><span class="has-text-bck-color">B</span></a></div>
                <div class="step-details is-hidden-touch">
                    <a href="page3?" class="button is-rounded is-inverted is-info"><p class="step-title">Background</p></a>
                </div>
            </div>
            <div class="step-item is-active is-info">
                <div class="step-marker"><a href="page4?"><span class="">C</span></a></div>
                <div class="step-details is-hidden-touch">
                    <a href="page4?" class="button is-rounded is-inverted is-info"><p class="step-title">Class</p></a>
                </div>
            </div>
            <div class="step-item">
                <div class="step-marker">
                <a href="page5?"><span class="has-text-bck-color icon"><i class="fa fa-flag"></i></span></a>
                </div>
                <div class="step-details is-hidden-touch">
                    <a href="page5?" class="button is-rounded is-inverted is-info"><p class="step-title">Finalize</p></a>
                </div>
            </div>
        </div>

        <div class="field">
            <div id="selectClassControlShell" class="select is-medium">
                <select id="selectClass" name="{{character.classID}}">
                </select>
            </div>
        </div>

        <article id="isArchivedMessage" class="message is-hidden">
            <div class="message-header is-block text-center">
                <p class="has-text-grey-lighter font-noto-sans is-size-5 has-text-weight-bold">Archived Class</p>
            </div>
            <div class="message-body has-text-grey-light font-noto-sans">
                This class has been archived, likely because there is a new version available. Archived versions may eventually be removed so we highly recommend updating your character to the newest version when available.
            </div>
        </article>

        <article class="class-content message is-info">
            <div id="classDescription" class="message-body"></div>
        </article>

    </div>

    <div class="class-content">

        <div id="classBroadInfo" class="box">
            <div class="columns">
                <div class="column">
                </div>
                <div class="column">
                    <div class="has-tooltip-bottom has-tooltip-multiline" data-tooltip="At 1st level, you gain an ability boost in the key ability of your class.">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Key Ability</p>
                        <div id="keyAbility" class="container">
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="has-tooltip-bottom has-tooltip-multiline" data-tooltip="Your max HP increases by this number plus your Constitution modifier at every level (including 1st).">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Hit Points</p>
                        <div id="hitPoints" class="container">
                        </div>
                    </div>
                </div>
                <div class="column">
                </div>
            </div>
        </div>

        <div id="classInfo" class="box">
            <div class="tile is-ancestor">
                <div class="tile is-parent is-4 is-vertical">
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Perception</p>
                        <div id="profPerception" class="container">
                        </div>
                    </div>
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Skills</p>
                        <div id="profSkills" class="container">
                        </div>
                        <div id="profSkillsCode">
                        </div>
                    </div>
                </div>
                <div class="tile is-parent is-4 is-vertical">
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Saving Throws</p>
                        <div id="profSavingThrows" class="container">
                        </div>
                    </div>
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Class DC</p>
                        <div id="profClassDC" class="container">
                        </div>
                    </div>
                </div>
                <div class="tile is-parent is-4 is-vertical">
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Attacks</p>
                        <div id="profAttacks" class="container">
                        </div>
                    </div>
                    <div class="tile is-child">
                        <p class="is-size-4 has-text-title has-text-weight-semibold">Defenses</p>
                        <div id="profDefenses" class="container">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="classAbilities" class="box">
        </div>

    </div>

</div>


