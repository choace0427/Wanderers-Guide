<div class="profile-container">

    <h1>Welcome to your profile, {{user.username}}</h1>

    <img src="{{user.thumbnail}}" width="50" height="50" alt="Profile Image" />
    <p>This is your profile thumbnail</p>
    <p>User ID: #{{user.id}}</p>

    {{#ifEqual user.isMember 1}}
        <br>
		<p><b>Fun Fact:</b> You're a Member!</p>
	{{/ifEqual}}
	{{#ifEqual user.isAdmin 1}}
        <br>
		<p><b>SUPER Fun Fact:</b> You're an Admin!</p>
	{{/ifEqual}}

</div>